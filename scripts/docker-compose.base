version: '3.1'

services:
  dc:
    image: anodot/streamsets:latest
    restart: on-failure
    container_name: anodot-sdc
    environment:
      SDC_JAVA_OPTS: SDC_JAVA_OPTS_VALUE
      SDC_CONF_RUNNER_THREAD_POOL_SIZE: SDC_THREAD_POOL_SIZE_VALUE
    volumes:
      - sdc-data:/data

  agent:
    image: anodot/daria:latest
    container_name: anodot-agent-my
    hostname: agent
    restart: always
    stdin_open: true
    tty: true
    depends_on:
      - dc

    volumes:
      - sdc-data:/sdc-data
      - agent-data:/usr/src/app/data

volumes:
  sdc-data:
  agent-data:
